<section class="page-content">
  <div class="body-container">
    <h1 class="page-title">Animals</h1>
    
    <% for animal in @animals %>
    <img class="animal-pictures" src="<%=animal.picture%>"/>
    <p>Animal name: <%= animal.name %></p>
    <p>Type: <%= animal.type %></p>
    <p>Breed: <%= animal.breed %></p>
    <p>Age: <%= animal.age %></p>
    <p>Date added: <%= animal.date_added %></p>
    <p>Adoptable: <%= animal.available %></p>

    <hr/>
    <% end %>

  </div>
</section>
